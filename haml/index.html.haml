- require 'date'

- last_modified = Date.new(2016, 6, 4)
- options = @_haml_locals[:_hamlout].options
- options[:remove_whitespace] = true

%html{lang: "en"}
  %head
    %title Javier Buzzi

    %meta{charset: "utf-8"}/
    %meta{content: "My resume home page. View all the technologies I've worked with and my experience with them.", name: "description"}/
    %meta{content: "resume,python,django,javascript,employ,programmer,hire,javier+buzzi", name: "keywords"}/
    %meta{content: "Update, #{last_modified.strftime('%Y-%m-%d')}", name: "revised"}/
    %meta{content: "Javier Buzzi", name: "author"}/

    %link{href: "https://s.gravatar.com/avatar/843d0aabb84a3b312d08384834c0f26d?s=16", rel: "shortcut icon", type: "image/x-icon"}/
    %link{href: "/css/main.css", media: "screen", rel: "stylesheet", type: "text/css"}/
    %link{href: "/css/print.css", media: "print", rel: "stylesheet", type: "text/css"}/

    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js", type: "text/javascript"}
    %script{src: "/js/main.js", type: "text/javascript"}

  %body
    #wrapper
      %nav#sidebar{role: "navigation"}
        %ul
          %li
            %a{href: "#skills", title: "View my skills and experience"} Skills
          %li
            %a{href: "#employment", title: "Companies I have worked for"} Employment
          %li
            %a{href: "#education", title: "View where I studied and gained my foundation skills"} Education
          %li
            %a{href: "#aboutme", title: "Click here to find out a little more about me!"} About Me

      #page
        %header
          #face-wrap
            %img{alt: "portrait", title: "Shameless selfie", src: "https://scontent-lhr3-1.xx.fbcdn.net/v/t1.0-9/13151863_10209562928135756_1673982446990755101_n.jpg?oh=b12cba6e13f519d409318dc67baa0882&oe=57CFAFF2"}/

          #main-details-wrap
            %ul
              %li.print-only www.buzzi.me
              %li Miami, FL
              %li (786) 563-3862
              %li buzzi.javier@gmail.com
              %li.visual-aid
                %a{href: "http://stackoverflow.com/users/5449364/javier-buzzi", title: "stackoverflow", target: "_blank"} Stack Overflow
            %h1 Javier Buzzi
            %h4
              %span.visual-aid Problem Solver,&nbsp;
              %span.strike
                %span Software Engineer
              %span.visual-aid ,&nbsp;Geek

        %section#skills.page
          = Haml::Engine.new(File.read("haml/pages/skills.haml"), options).render

        %section#employment.page
          = Haml::Engine.new(File.read("haml/pages/employment.haml"), options).render

        %section#education.page-break
          = Haml::Engine.new(File.read("haml/pages/education.haml"), options).render

        %section#aboutme.page
          = Haml::Engine.new(File.read("haml/pages/about.haml"), options).render

        %footer
          #legal
            Javier.Buzzi.me  &copy;&nbsp;
            %span#year #{last_modified.year}
          #last-modified Last modified: #{DateTime::ABBR_MONTHNAMES[last_modified.month]} #{last_modified.strftime('%d, %Y')}

